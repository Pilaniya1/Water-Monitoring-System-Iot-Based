<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Login User</title>
    <link rel="stylesheet" href="/public/index.css">

  </head>
  <body>
    <center>
      <div class="row py-4" style="justify-content: center; align-items: center;margin:0">
          <div class="col-lg-6 col-md-8">
            <h1 class="display-1 heading">IOT<span style=" color:#5464EA;padding-left: 10px;">-</span><span style=" color:#EB0D4A;padding-left: 10px;">WMS</span></h1>
          </div>
      </div>
    </center>
    <div class="container authentication mb-2">
        <h1 class="mb-2">Login User</h1>
        <% if(error){ %> 
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>
        <form action="/login" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control" id="exampleInputPassword1" required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <div id="emailHelp" class="form-text mt-3">Don't have an account <a href = '/register' >Register</a> </div>

        </form>
    </div>

   


    <div class="header" style="position: absolute;bottom: 0;">
      <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
      viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
      <defs>
      <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
      </defs>
      <g class="parallax">
      <use xlink:href="#gentle-wave" x="48" y="0" fill="#E7E4FF" />
      <use xlink:href="#gentle-wave" x="48" y="3" fill="#BBC6EF" />
      <use xlink:href="#gentle-wave" x="48" y="5" fill="#8E9CEC" />
      <use xlink:href="#gentle-wave" x="48" y="7" fill="#5464EA" />
      </g>
      </svg>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
      let error = document.querySelector('.alert-danger');
      if(error){
        setTimeout(() => {
          error.remove();
        }, 2000);
      }
    </script>
  </body> 
</html>